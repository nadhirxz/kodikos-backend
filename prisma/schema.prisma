// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String        @id @default(cuid()) @map("_id")
    email     String        @unique
    password  String
    name      String
    position  String
    company   Company?
    owned     Data[]
    sold      Transaction[] @relation(name: "sold")
    soldIDs   String[]
    bought    Transaction[] @relation(name: "bought")
    boughtIDs String[]
    companyId String?
    balande   Float         @default(0)
}

model Company {
    id          String @id @default(cuid()) @map("_id")
    name        String
    commerceId  String @unique
    established String
    user        User   @relation(fields: [userId], references: [id])
    userId      String @unique
}

model Data {
    id                  String               @id @default(cuid()) @map("_id")
    fileName            String
    owner               User                 @relation(fields: [ownerId], references: [id])
    ownerId             String
    listing             Listing?
    title               String
    description         String
    extraServiceRequest ExtraServiceRequest?
}

model Listing {
    id              String @id @default(cuid()) @map("_id")
    price           Int
    data            Data   @relation(fields: [dataId], references: [id])
    dataId          String @unique
    title           String
    processingPrice Float
}

model Transaction {
    id            String         @id @default(cuid()) @map("_id")
    seller        User           @relation("sold", fields: [sellerId], references: [id])
    sellerId      String         @unique
    buyer         User           @relation("bought", fields: [buyerId], references: [id])
    buyerId       String         @unique
    price         Int
    date          DateTime       @default(now())
    extraServices ExtraService[]
}

model ExtraServiceRequest {
    id      String @id @default(cuid()) @map("_id")
    data    Data   @relation(fields: [dataId], references: [id])
    dataId  String @unique
    type    String
    details String
}

model ExtraService {
    id            String      @id @default(cuid()) @map("_id")
    transaction   Transaction @relation(fields: [transactionId], references: [id])
    transactionId String      @unique
    type          String
    price         Int
}
